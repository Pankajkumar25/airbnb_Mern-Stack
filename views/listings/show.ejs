<div class="alert alert-success mt-3" role="alert">
        <center><b><%= listing.title %></b></center>
      </div>
      
<div class="card lg-3 offset-2 listing-card" >
  <div class="row g-0">
    <div class="col-md-4"> 
      <img src="<%= listing.image.url %>" class="rounded"  style="width: 30rem;" alt="...">
    </div>
    <div class="col-md-10">
      <div class="card-body">
        <!-- <p class="card-text"><span>Title</span><%= listing.title %></p> -->
        <p class="card-text">Owned by <b><%= listing.owner.username %></b></p><br>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
        <p class="card-text">
          <a href="/listings" class="btn btn-warning">Back</a>
       
        
            <% if(curUser && listing.owner._id.equals(curUser._id)) { %>
            <div>
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-info">Edit</a>
          <div>
            <br>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
              <button class="btn btn-danger">Delete</button>
            </form>
        </div>
        <% } %>

        <% if(curUser) { %>
            <div class="alert alert-success mt-3" role="alert">
              <center><h4>Leave a Reviews</h4></center>
            </div>
            <form action="/listings/<%= listing.id %>/reviews"  method="post" class="needs-validation" novalidate>
              <!-- <div>
                <label for="rating"><b>Rating</b></label>
                <input type="range" min="1" max="5" id="rating" class="form-range" name="review[rating]">
               -->

              <div>
                
              <fieldset class="starability-slot">
                <legend><b>Rating :</b></legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
               <br>
              <div>
                <label for="comment"><b>Comment</b></label>
                <textarea name="review[Comment]" id="comment" cols="15" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">
                  Please Add Your Comment.
                </div>
              </div>
              <br>
              <button class="btn btn-primary">Submit</button>
            </form>

            <% } %>

             <p><b>All Reviews</b></p>
             <div class="row">
             <% for(review of listing.reviews) { %>
             <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5 class="card- title"><%= review.author.username %></h5>
                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                <p class="card-text"><%= review.Comment %></p>
                <!-- <p class="card-text"><%= review.rating %>* Star</p> -->
                
      
  
              </div>
              <br>
              <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-3">
                <button class="btn btn-danger btn-sm ">Delete</button>
              </form>
             </div>
             
             <% } %>
            </div>

            <!-- <p class="card-text"><%= listing.reviews %></p> -->
          </div>
        </p>

        
        <!-- <p class="card-text"><small class="text-body-secondary"></small></p> -->
      </div>
    </div>
  </div>
</div>